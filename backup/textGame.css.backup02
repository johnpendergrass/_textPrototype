body {
    background-color: black;
    color: white;
    margin: 0;
    padding: 0;
    font-family: monospace;
    height: 100vh;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: center;
}

.container {
    display: grid;
    grid-template-columns: 3fr 1fr;
    grid-template-rows: 120px 1fr 40px;
    grid-template-areas:
        "header header"
        "text status"
        "prompt status";
    width: 1280px;
    height: 720px;
    gap: 10px;
    padding: 10px;
    box-sizing: border-box;
}

.header {
    grid-area: header;
    border: 2px solid white;
    padding: 10px;
    box-sizing: border-box;
    text-align: center;
}

.header h1 {
    color: orange;
}

.text {
    grid-area: text;
    border: 2px solid white;
    padding: 10px;
    box-sizing: border-box;
}

.prompt {
    grid-area: prompt;
    border: 2px solid white;
    padding: 10px;
    box-sizing: border-box;
}

.status {
    grid-area: status;
    border: 2px solid white;
    padding: 10px;
    box-sizing: border-box;
}